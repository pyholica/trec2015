{
  "settings" : {
    "analysis" : {
      "analyzer" : {
        "my_TFIDF_analyzer" : {
          "tokenizer" : "standard",
          "filter" : ["lowercase", "baseform"]

        }
      },
      "filter": {
        "baseform": {
          "type": "baseform",
          "name": "en"
        }
      }
    }
  },
  "mappings":{
     "article":{
        "properties":{
          "pmcid":{
              "type":"string"
          },
           "title":{
              "analyzer":"my_TFIDF_analyzer",
              "type":"string"

           },
          "abstract":{
              "analyzer":"my_TFIDF_analyzer",
              "type":"string"
          },
          "body":{
              "analyzer":"my_TFIDF_analyzer",
              "type":"string"
          }
        }
     }
  }
}
